{
    "Comment": "A state machine that does mock stock trading.",
    "StartAt": "Rekognition Label Detection",
    "States": {
        "Rekognition Label Detection": {
            "Type": "Task",
            "Resource": "${StartRekognitionJobFunctionArn}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 15,
                    "MaxAttempts": 5,
                    "BackoffRate": 1.5
                }
            ],
            "Next": "Check Job Status"
        },
        "Check Job Status": {
            "Type": "Task",
            "Resource": "${CheckRekognitionResultsFunctionArn}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 2,
                    "MaxAttempts": 3,
                    "BackoffRate": 1
                }
            ],
            "End": true
        },
    }
}